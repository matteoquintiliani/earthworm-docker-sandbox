# EW_INSTALLATION and EW_INST_ID
# EW_INSTALL_INSTALLATION = INST_MEMPHIS
EW_INSTALL_INSTALLATION = INST_INGV

# Leave NS empty
NS = earthworm_docker_sandbox

# Set image name
IMAGE_NAME ?= earthworm_docker_sandbox

# Set version
# VERSION = ubuntu_14_04_1
VERSION = buster-slim

# Set container name
CONTAINER_NAME ?= earthworm_docker_sandbox

# Set general variables
BASEMOUNTDIR = `pwd`

# Set main directory test
MAINDIR_TEST = ../data/memphis
# MAINDIR_TEST = ../data/tankplayer_ew_testdir

VOLUMES = \
	-v  $(BASEMOUNTDIR)/${MAINDIR_TEST}/params:/opt/earthworm/params \
	-v  $(BASEMOUNTDIR)/${MAINDIR_TEST}/log:/opt/earthworm/log \
	-v  $(BASEMOUNTDIR)/${MAINDIR_TEST}/data:/opt/earthworm/data
